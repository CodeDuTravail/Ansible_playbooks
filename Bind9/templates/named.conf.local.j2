// Forward zone for {{ domain_name }}
zone "{{ domain_name }}" {
        type master;
        file "/etc/bind/zones/db.{{ domain_name }}";
        allow-transfer { none; };  // Restrict zone transfers
};

// Reverse zone for 192.168.1.0/24
zone "1.168.192.in-addr.arpa" {
        type master;
        file "/etc/bind/zones/db.192.168.1";
        allow-transfer { none; };  // Restrict zone transfers
};